#include <mpi.h>
#include <stdio.h>

int main(int argc, char** argv) {
    int rank, size;
    char message[100]; 
    MPI_Init(&argc, &argv);
    MPI_Comm_rank(MPI_COMM_WORLD, &rank);
    MPI_Comm_size(MPI_COMM_WORLD, &size);

    if (size < 2) {
        if (rank == 0)
            printf("This program requires at least 2 processes.\n");
        MPI_Finalize();
        return 0;
    }

    if (rank == 1) {
        sprintf(message, "Hello from Process 1!");  
        MPI_Send(message, sizeof(message), MPI_CHAR, 0, 1, MPI_COMM_WORLD); 
        printf("Process 1 sent message to Process 0\n");
    }
    else if (rank == 0) {
        MPI_Recv(message, sizeof(message), MPI_CHAR, 1, 1, MPI_COMM_WORLD, MPI_STATUS_IGNORE);
        printf("Process 0 received: %s\n", message); 
    }
    MPI_Finalize();
    return 0;
}
