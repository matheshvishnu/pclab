#include <stdio.h>
#include <mpi.h>

int main(int argc, char *argv[]) {
    int rank, data_send, data_recv;

    MPI_Init(&argc, &argv);
    MPI_Comm_rank(MPI_COMM_WORLD, &rank);

    data_send = rank;


    if (rank == 0) {
       
        MPI_Ssend(&data_send, 1, MPI_INT, 1, 0, MPI_COMM_WORLD);
        printf("Process 0 sent %d\n", data_send);

        MPI_Recv(&data_recv, 1, MPI_INT, 1, 0, MPI_COMM_WORLD, MPI_STATUS_IGNORE);
        printf("Process 0 received %d\n", data_recv);
    }
    else if (rank == 1) {
       
        MPI_Recv(&data_recv, 1, MPI_INT, 0, 0, MPI_COMM_WORLD, MPI_STATUS_IGNORE);
        printf("Process 1 received %d\n", data_recv);

        MPI_Ssend(&data_send, 1, MPI_INT, 0, 0, MPI_COMM_WORLD);
        printf("Process 1 sent %d\n", data_send);
    }
    MPI_Finalize();
    return 0;
}
